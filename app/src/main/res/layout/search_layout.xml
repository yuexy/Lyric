<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardView_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cardView_bg">

        <zq.mdlib.mdwidget.ButtonIcon
            android:id="@+id/search_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            app:widget_iconFloat="@mipmap/ic_arrow_back_grey"
            app:widget_iconSize="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/search_back"
            android:text="Search"
            android:textColor="#5a5a5a"
            android:textSize="18sp"/>

    </RelativeLayout>

    <WebView
        android:id="@+id/search_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>