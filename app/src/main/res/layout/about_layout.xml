<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardView_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cardView_bg">

        <zq.mdlib.mdwidget.ButtonIcon
            android:id="@+id/about_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            app:widget_iconFloat="@mipmap/ic_arrow_back_grey"
            app:widget_iconSize="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/about_back"
            android:text="About"
            android:textColor="#5a5a5a"
            android:textSize="18sp"/>

    </RelativeLayout>

    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@mipmap/whu_logo"/>

    <com.example.weimeng.lyric.view.CanaroTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Kelly"
        android:textColor="@color/title_text_color"
        android:textSize="22sp"/>

</LinearLayout>